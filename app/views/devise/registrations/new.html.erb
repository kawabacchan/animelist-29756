<div class="registrations-new">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      ニックネーム<br>
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>

    <div class="field">
      Eメール<br>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      パスワード（6文字以上）<br>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      パスワード（確認用）<br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      生年月日<br>
      <%= raw sprintf(f.date_select(:birthday, prompt: '--', use_month_numbers: true, start_year: Time.now.year, end_year: 1920, date_separator:'%s'), '年', '月') + '日' %>
    </div>

    <div class="field">
      性別<br>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, ) %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>